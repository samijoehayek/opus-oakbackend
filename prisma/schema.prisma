generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER & AUTH
// ============================================

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  passwordHash  String    @map("password_hash")
  firstName     String    @map("first_name")
  lastName      String    @map("last_name")
  phone         String?
  role          UserRole  @default(CUSTOMER)
  isActive      Boolean   @default(true) @map("is_active")
  emailVerified Boolean   @default(false) @map("email_verified")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  lastLoginAt   DateTime? @map("last_login_at")
  addresses     Address[]
  cart          Cart?
  orders        Order[]
  reviews       ProductReview[]
  wishlist      WishlistItem[]

  @@map("users")
}

model Address {
  id             String   @id @default(uuid())
  userId         String   @map("user_id")
  label          String?
  fullName       String   @map("full_name")
  phone          String
  addressLine1   String   @map("address_line_1")
  addressLine2   String?  @map("address_line_2")
  city           String
  region         String
  postalCode     String?  @map("postal_code")
  country        String   @default("Lebanon")
  isDefault      Boolean  @default(false) @map("is_default")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  ordersBilling  Order[]  @relation("BillingAddress")
  ordersShipping Order[]  @relation("ShippingAddress")

  @@map("addresses")
}

// ============================================
// PRODUCTS
// ============================================

model Product {
  id              String            @id @default(uuid())
  sku             String            @unique
  slug            String            @unique
  name            String
  tagline         String?
  description     String
  longDescription String?           @map("long_description")
  story           String?
  badge           String?
  category        FurnitureCategory
  subcategory     String?
  basePrice       Decimal           @map("base_price") @db.Decimal(10, 2)
  originalPrice   Decimal?          @map("original_price") @db.Decimal(10, 2)
  
  // Dimensions (default/base)
  width           Decimal?          @db.Decimal(6, 2)
  height          Decimal?          @db.Decimal(6, 2)
  depth           Decimal?          @db.Decimal(6, 2)
  weight          Decimal?          @db.Decimal(6, 2)
  
  // DEPRECATED - Use ProductModel instead
  modelUrl        String?           @map("model_url")
  modelThumbnail  String?           @map("model_thumbnail")
  
  // Production & Delivery
  leadTimeDays    Int               @default(21) @map("lead_time_days")
  deliveryPrice   Decimal           @default(0) @map("delivery_price") @db.Decimal(10, 2)
  deliveryInfo    String?           @map("delivery_info")
  
  // Returns & Warranty
  returnDays      Int               @default(14) @map("return_days")
  returnInfo      String?           @map("return_info")
  warrantyYears   Int               @default(2) @map("warranty_years")
  warrantyInfo    String?           @map("warranty_info")
  
  // Additional Info
  assembly        String?
  madeIn          String?           @map("made_in")
  careInstructions String[]         @map("care_instructions")
  
  // Status
  isActive        Boolean           @default(true) @map("is_active")
  isFeatured      Boolean           @default(false) @map("is_featured")
  
  // Timestamps
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")
  
  // Relations
  images          ProductImage[]
  model           ProductModel?     // NEW: 3D Model relation
  sizes           ProductSize[]
  fabricCategories FabricCategory[]
  fabrics         Fabric[]
  features        ProductFeature[]
  specifications  ProductSpecification[]
  reviews         ProductReview[]
  relatedTo       ProductRelation[] @relation("RelatedFrom")
  relatedFrom     ProductRelation[] @relation("RelatedTo")
  cartItems       CartItem[]
  orderItems      OrderItem[]
  wishlistItems   WishlistItem[]
  
  // Legacy
  colorOptions    ColorOption[]
  materialOptions MaterialOption[]
  variants        ProductVariant[]

  @@index([category])
  @@index([isActive, isFeatured])
  @@index([slug])
  @@map("products")
}

// NEW: 3D Model for products
model ProductModel {
  id                String   @id @default(uuid())
  productId         String   @unique @map("product_id")
  
  // Model files
  lowPolyUrl        String   @map("low_poly_url")        // Optimized for quick loading
  highPolyUrl       String?  @map("high_poly_url")       // Full quality for detailed view
  
  // Model metadata
  format            ModelFormat @default(GLB)
  fileSizeLowPoly   Int?     @map("file_size_low_poly")  // In bytes
  fileSizeHighPoly  Int?     @map("file_size_high_poly") // In bytes
  
  // Thumbnail/poster for loading state
  posterUrl         String?  @map("poster_url")
  
  // Scene configuration
  environmentPreset EnvironmentPreset @default(STUDIO) @map("environment_preset")
  backgroundColor   String?  @map("background_color")    // Hex color or 'transparent'
  
  // Camera defaults
  cameraPositionX   Float    @default(0) @map("camera_position_x")
  cameraPositionY   Float    @default(1) @map("camera_position_y")
  cameraPositionZ   Float    @default(3) @map("camera_position_z")
  cameraTargetX     Float    @default(0) @map("camera_target_x")
  cameraTargetY     Float    @default(0.5) @map("camera_target_y")
  cameraTargetZ     Float    @default(0) @map("camera_target_z")
  
  // Interaction settings
  autoRotate        Boolean  @default(true) @map("auto_rotate")
  autoRotateSpeed   Float    @default(1) @map("auto_rotate_speed")
  enableZoom        Boolean  @default(true) @map("enable_zoom")
  enablePan         Boolean  @default(true) @map("enable_pan")
  minDistance       Float    @default(1) @map("min_distance")
  maxDistance       Float    @default(10) @map("max_distance")
  
  // Scale adjustment
  scale             Float    @default(1)
  
  // Status
  isActive          Boolean  @default(true) @map("is_active")
  
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
  
  product           Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_models")
}

model ProductImage {
  id        String   @id @default(uuid())
  productId String   @map("product_id")
  url       String
  altText   String?  @map("alt_text")
  type      ImageType @default(PHOTO)
  sortOrder Int      @default(0) @map("sort_order")
  isPrimary Boolean  @default(false) @map("is_primary")
  createdAt DateTime @default(now()) @map("created_at")
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_images")
}

model ProductSize {
  id            String   @id @default(uuid())
  productId     String   @map("product_id")
  label         String
  sku           String?
  price         Decimal  @db.Decimal(10, 2)
  originalPrice Decimal? @map("original_price") @db.Decimal(10, 2)
  
  // Dimensions
  width         Decimal  @db.Decimal(6, 2)
  height        Decimal  @db.Decimal(6, 2)
  depth         Decimal  @db.Decimal(6, 2)
  seatHeight    Decimal? @map("seat_height") @db.Decimal(6, 2)
  
  // Bed dimensions (for sofa beds)
  bedWidth      Decimal? @map("bed_width") @db.Decimal(6, 2)
  bedLength     Decimal? @map("bed_length") @db.Decimal(6, 2)
  
  // Stock & Lead time
  inStock       Boolean  @default(true) @map("in_stock")
  leadTime      String?  @map("lead_time")
  
  sortOrder     Int      @default(0) @map("sort_order")
  isDefault     Boolean  @default(false) @map("is_default")
  createdAt     DateTime @default(now()) @map("created_at")
  product       Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_sizes")
}

model FabricCategory {
  id        String   @id @default(uuid())
  productId String   @map("product_id")
  name      String
  sortOrder Int      @default(0) @map("sort_order")
  createdAt DateTime @default(now()) @map("created_at")
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  fabrics   Fabric[]

  @@map("fabric_categories")
}

model Fabric {
  id               String          @id @default(uuid())
  productId        String          @map("product_id")
  fabricCategoryId String          @map("fabric_category_id")
  name             String
  hexColor         String          @map("hex_color")
  textureUrl       String?         @map("texture_url")
  price            Decimal         @default(0) @db.Decimal(10, 2)
  inStock          Boolean         @default(true) @map("in_stock")
  sortOrder        Int             @default(0) @map("sort_order")
  isDefault        Boolean         @default(false) @map("is_default")
  createdAt        DateTime        @default(now()) @map("created_at")
  product          Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  fabricCategory   FabricCategory  @relation(fields: [fabricCategoryId], references: [id], onDelete: Cascade)

  @@map("fabrics")
}

model ProductFeature {
  id          String   @id @default(uuid())
  productId   String   @map("product_id")
  icon        String
  title       String
  description String
  sortOrder   Int      @default(0) @map("sort_order")
  createdAt   DateTime @default(now()) @map("created_at")
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_features")
}

model ProductSpecification {
  id        String   @id @default(uuid())
  productId String   @map("product_id")
  label     String
  value     String
  sortOrder Int      @default(0) @map("sort_order")
  createdAt DateTime @default(now()) @map("created_at")
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_specifications")
}

model ProductReview {
  id        String   @id @default(uuid())
  productId String   @map("product_id")
  userId    String?  @map("user_id")
  author    String
  email     String?
  rating    Decimal  @db.Decimal(2, 1)
  title     String
  content   String
  verified  Boolean  @default(false)
  helpful   Int      @default(0)
  status    ReviewStatus @default(PENDING)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([productId, status])
  @@map("product_reviews")
}

model ProductRelation {
  id              String   @id @default(uuid())
  productId       String   @map("product_id")
  relatedProductId String  @map("related_product_id")
  relationType    RelationType @default(SIMILAR) @map("relation_type")
  sortOrder       Int      @default(0) @map("sort_order")
  createdAt       DateTime @default(now()) @map("created_at")
  product         Product  @relation("RelatedFrom", fields: [productId], references: [id], onDelete: Cascade)
  relatedProduct  Product  @relation("RelatedTo", fields: [relatedProductId], references: [id], onDelete: Cascade)

  @@unique([productId, relatedProductId])
  @@map("product_relations")
}

// Legacy models - keep for backward compatibility
model MaterialOption {
  id            String   @id @default(uuid())
  productId     String   @map("product_id")
  name          String
  type          String
  priceModifier Decimal  @default(0) @map("price_modifier") @db.Decimal(10, 2)
  textureUrl    String?  @map("texture_url")
  isDefault     Boolean  @default(false) @map("is_default")
  isAvailable   Boolean  @default(true) @map("is_available")
  createdAt     DateTime @default(now()) @map("created_at")
  product       Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("material_options")
}

model ColorOption {
  id            String   @id @default(uuid())
  productId     String   @map("product_id")
  name          String
  hexCode       String   @map("hex_code")
  priceModifier Decimal  @default(0) @map("price_modifier") @db.Decimal(10, 2)
  textureUrl    String?  @map("texture_url")
  isDefault     Boolean  @default(false) @map("is_default")
  isAvailable   Boolean  @default(true) @map("is_available")
  createdAt     DateTime @default(now()) @map("created_at")
  product       Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("color_options")
}

model ProductVariant {
  id            String   @id @default(uuid())
  productId     String   @map("product_id")
  sku           String   @unique
  name          String
  configuration Json
  price         Decimal  @db.Decimal(10, 2)
  modelUrl      String?  @map("model_url")
  imageUrl      String?  @map("image_url")
  isAvailable   Boolean  @default(true) @map("is_available")
  createdAt     DateTime @default(now()) @map("created_at")
  product       Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_variants")
}

// ============================================
// WISHLIST
// ============================================

model WishlistItem {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  productId String   @map("product_id")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@map("wishlist_items")
}

// ============================================
// CART & ORDERS
// ============================================

model Cart {
  id        String     @id @default(uuid())
  userId    String     @unique @map("user_id")
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")
  items     CartItem[]
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("carts")
}

model CartItem {
  id            String   @id @default(uuid())
  cartId        String   @map("cart_id")
  productId     String   @map("product_id")
  configuration Json
  quantity      Int      @default(1)
  unitPrice     Decimal  @map("unit_price") @db.Decimal(10, 2)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  cart          Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product       Product  @relation(fields: [productId], references: [id])

  @@unique([cartId, productId, configuration])
  @@map("cart_items")
}

model Order {
  id                String      @id @default(uuid())
  orderNumber       String      @unique @map("order_number")
  userId            String      @map("user_id")
  shippingAddressId String      @map("shipping_address_id")
  billingAddressId  String?     @map("billing_address_id")
  subtotal          Decimal     @db.Decimal(10, 2)
  shippingCost      Decimal     @default(0) @map("shipping_cost") @db.Decimal(10, 2)
  tax               Decimal     @default(0) @db.Decimal(10, 2)
  total             Decimal     @db.Decimal(10, 2)
  currency          String      @default("USD")
  paymentPlan       PaymentPlan @default(FULL) @map("payment_plan")
  status            OrderStatus @default(PENDING_PAYMENT)
  statusHistory     Json        @default("[]") @map("status_history")
  estimatedDelivery DateTime?   @map("estimated_delivery")
  notes             String?
  createdAt         DateTime    @default(now()) @map("created_at")
  updatedAt         DateTime    @updatedAt @map("updated_at")
  items             OrderItem[]
  billingAddress    Address?    @relation("BillingAddress", fields: [billingAddressId], references: [id])
  shippingAddress   Address     @relation("ShippingAddress", fields: [shippingAddressId], references: [id])
  user              User        @relation(fields: [userId], references: [id])
  payments          Payment[]

  @@index([userId])
  @@index([status])
  @@index([orderNumber])
  @@map("orders")
}

model OrderItem {
  id            String   @id @default(uuid())
  orderId       String   @map("order_id")
  productId     String   @map("product_id")
  productName   String   @map("product_name")
  productSku    String   @map("product_sku")
  configuration Json
  quantity      Int
  unitPrice     Decimal  @map("unit_price") @db.Decimal(10, 2)
  totalPrice    Decimal  @map("total_price") @db.Decimal(10, 2)
  createdAt     DateTime @default(now()) @map("created_at")
  order         Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product       Product  @relation(fields: [productId], references: [id])

  @@map("order_items")
}

model Payment {
  id            String        @id @default(uuid())
  orderId       String        @map("order_id")
  amount        Decimal       @db.Decimal(10, 2)
  currency      String        @default("USD")
  method        PaymentMethod
  status        PaymentStatus @default(PENDING)
  sequence      Int           @default(1)
  provider      String?
  providerRef   String?       @map("provider_ref")
  metadata      Json?
  failureReason String?       @map("failure_reason")
  processedAt   DateTime?     @map("processed_at")
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")
  order         Order         @relation(fields: [orderId], references: [id])

  @@index([orderId])
  @@index([status])
  @@map("payments")
}

// ============================================
// AUDIT
// ============================================

model AuditLog {
  id         String   @id @default(uuid())
  userId     String?  @map("user_id")
  action     String
  entityType String   @map("entity_type")
  entityId   String   @map("entity_id")
  oldValue   Json?    @map("old_value")
  newValue   Json?    @map("new_value")
  ipAddress  String?  @map("ip_address")
  userAgent  String?  @map("user_agent")
  createdAt  DateTime @default(now()) @map("created_at")

  @@index([entityType, entityId])
  @@index([userId])
  @@index([createdAt])
  @@map("audit_logs")
}

// ============================================
// ENUMS
// ============================================

enum UserRole {
  CUSTOMER
  ADMIN
  SUPER_ADMIN
}

enum FurnitureCategory {
  TABLES
  CHAIRS
  SOFAS
  BEDS
  STORAGE
  LIGHTING
  OUTDOOR
  ACCESSORIES
}

enum ImageType {
  PHOTO
  VIDEO_THUMBNAIL
  LIFESTYLE
  DETAIL
  DIMENSION
}

enum ReviewStatus {
  PENDING
  APPROVED
  REJECTED
}

enum RelationType {
  SIMILAR
  COMPLEMENTARY
  UPSELL
  CROSS_SELL
}

enum OrderStatus {
  PENDING_PAYMENT
  PAYMENT_FAILED
  CONFIRMED
  IN_PRODUCTION
  READY_FOR_SHIPPING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

enum PaymentPlan {
  FULL
  SPLIT_70_30
}

enum PaymentMethod {
  CREDIT_CARD
  CRYPTO
  CASH_ON_DELIVERY
  BANK_TRANSFER
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
  CANCELLED
}

enum ModelFormat {
  GLB
  GLTF
  FBX
  OBJ
  USDZ
}

enum EnvironmentPreset {
  STUDIO
  APARTMENT
  CITY
  DAWN
  FOREST
  LOBBY
  NIGHT
  PARK
  SUNSET
  WAREHOUSE
}